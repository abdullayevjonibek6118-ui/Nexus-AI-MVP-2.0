# Шаблон .env файла для Nexus AI
# Скопируйте этот файл в .env и заполните значения

# ============================================
# ОСНОВНЫЕ НАСТРОЙКИ
# ============================================

PROJECT_NAME="Nexus AI"
API_V1_STR="/api"

# Генерируйте секретный ключ: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY="замените-на-случайный-секретный-ключ-минимум-32-символа"

# Время жизни access token в минутах
ACCESS_TOKEN_EXPIRE_MINUTES=60

#  ============================================
# БАЗА ДАННЫХ
# ============================================

# SQLite для разработки
DATABASE_URL="sqlite:///./sql_app.db"

# PostgreSQL для production (рекомендуется)
# DATABASE_URL="postgresql://username:password@localhost:5432/nexus_ai"

# ============================================
# OPENROUTER API (Обязательно)
# ============================================

# Получите ключ на https://openrouter.ai
OPENROUTER_API_KEY="sk-or-v1-ваш-ключ-здесь"

# Модель для AI анализа
AI_MODEL_NAME="nex-agi/deepseek-v3.1-nex-n1:free"

# ============================================
# HH.RU ИНТЕГРАЦИЯ (Опционально)
# ============================================

# Получите на https://dev.hh.ru
HH_CLIENT_ID="ваш-client-id"
HH_CLIENT_SECRET="ваш-client-secret"
HH_REDIRECT_URI="http://localhost:8000/api/auth/hh/callback"

# Для автоматизации (опционально, для тестов)
EMAIL="ваш-email@hh.ru"
PASSWORD="ваш-пароль"

# ============================================
# CORS (Cross-Origin Resource Sharing)
# ============================================

# Разрешенные источники (через запятую)
# BACKEND_CORS_ORIGINS="http://localhost:3000,https://your-domain.com"
